{{#> index title="User Profile"}}

<div class="page-wrapper p-t-130 p-b-100 font-poppins">
    <div class="wrapper wrapper--w680">
        <div class="card card-4">
            <div class="card-body">
                <div class="container-fluid my-5 py-5 alert-primary border">
                    <h2 class="text-center text-underline mb-3">My Profile</h2>
                    <form method="POST" enctype="multipart/form-data">
                        <img src="uploads\\{{../User/profileImage}}" alt="Profile Image" width="150" height="150"
                            class="mb-3">

                        <div class="row">
                            <div class="col-lg-12 form-group">
                                <input type="text" class="form-control" placeholder="Enter Name..." name="name"
                                    value="{{../User/name}}">
                            </div>
                            <div class="col-lg-12 form-group">
                                <input type="tel" class="form-control" placeholder="Enter Mobile Number..."
                                    name="phoneNumber" value="{{../User/phoneNumber}}">
                            </div>
                            <div class="col-lg-12 form-group">
                                <label class="label">Profile Image</label>
                                <input type="file" class="form-control" name="profileImage">
                            </div>
                            <div class="col-lg-12 form-group">
                                {{> area_selector areaId=../User.areaId Areas=../Areas}}
                            </div>
                            <div class="col-lg-12 form-group">
                                <button type="submit" class="btn btn-primary admin_login">Update Profile</button>
                            </div>
                        </div>
                    </form>
                    {{> errors ErrorMessages=../ErrorMessages}}
                </div>
            </div>
        </div>
    </div>
</div>
{{/index}}