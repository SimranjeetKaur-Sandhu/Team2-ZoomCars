<div class="colored-header">
    <!-- Top Bar -->
    <div class="header-top dark">
        <div class="container">
            <div class="row">
                <!-- Header Top Left -->
                <div class="header-top-left col-md-6 col-sm-6 col-xs-12 hidden-xs">
                    <ul class="listnone">
                        <li><a href="/about"><i class="fa fa-heart-o" aria-hidden="true"></i> About</a></li>
                    </ul>
                </div>
                <!-- Header Top Right Social -->
                <div class="header-right col-md-6 col-sm-6 col-xs-12 ">
                    <div class="pull-right">
                        <ul class="listnone">
                            {{!-- Only render login/signup if we're not already logged in.--}}
                            {{#unless AccountType}}
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                    aria-haspopup="true" aria-expanded="false"><span class="myname hidden-xs"><i
                                            class="fa fa-unlock" aria-hidden="true"></i> Login </span> </a>
                                <ul class="dropdown-menu">
                                    <li><a href="/driver-login">Driver Login </a></li>
                                    <li><a href="/user-login">User Login</a></li>
                                    <li><a href="/admin-login">Admin Login</a></li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                    aria-haspopup="true" aria-expanded="false"><span class="myname hidden-xs"> <i
                                            class="fa fa-unlock" aria-hidden="true"></i>Register </span> </a>
                                <ul class="dropdown-menu">
                                    <li><a href="/driver-signup">Driver Register</a></li>
                                    <li><a href="/user-signup">User Register</a></li>
                                </ul>
                            </li>
                            {{/unless}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Top Bar End -->
    <!-- Navigation Menu -->
    <div class="clearfix"></div>
    <!-- menu start -->
    <nav id="menu-1" class="mega-menu bg-primary">
        <!-- menu list items container -->
        <section class="menu-list-items">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <!-- menu logo -->
                        <ul class="menu-logo">
                            <li>
                                <a href="/home"><img src="img/zoomcars.jpg" alt="logo"> </a>
                            </li>
                        </ul>
                        <!-- menu links -->
                        <ul class="menu-links">
                            <!-- active class -->
                            <li>
                                <a href="/home">Home <i class="fa"></i></a>
                            </li>
                            {{#if AccountType}}
                            <li>
                                {{#unlessEquals AccountType "Admin"}}
                                <a href="/dashboard">Dashboard <i class="fa"></i></a>
                                {{/unlessEquals}}
                            </li>
                            <li>
                                <a href="#">My Profile<i class="fa fa-angle-down fa-indicator"></i></a>
                                <!-- drop down multilevel  -->
                                <ul class="drop-down-multilevel">
                                    {{#unlessEquals AccountType "Admin"}}
                                    <li><a href="/profile">Profile</a></li>
                                    {{/unlessEquals}}
                                    <li><a href="/change-password">Reset Password</a></li>
                                </ul>
                            </li>
                            {{#ifEquals AccountType "Admin"}}
                            <li>
                                <a href="#">Manage<i class="fa fa-angle-down fa-indicator"></i></a>
                                <!-- drop down multilevel  -->
                                <ul class="drop-down-multilevel">
                                    <li><a href="/admin-view-users">Users</a></li>
                                    <li><a href="/admin-view-drivers">Drivers</a></li>
                                    <li><a href="/admin-manage-areas">Cities And Areas</a></li>
                                </ul>
                            </li>
                            {{/ifEquals}} {{!Admin}}
                            {{#ifEquals AccountType "Driver"}}
                            <li>
                                <a href="/driver-routes">Manage Routes<i class="fa"></i></a>
                            </li>
                            {{/ifEquals}} {{! Driver }}
                            {{#ifEquals AccountType "User"}}
                            <li>
                                <a href="/user-search-drivers">Search Ride<i class="fa"></i></a>
                            </li>
                            {{/ifEquals}} {{! User}}
                            <li>
                                <a href="/logout">Logout<i class="fa "></i></a>
                            </li>
                            {{/if}} {{! AccountType }}
                        </ul>
                    
                    </div>
                </div>
            </div>
        </section>
    </nav>
    <!-- menu end -->
</div>